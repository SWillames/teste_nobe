<h4>Bank statement</h4>

<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Amount</th>
      <th>Date of Operation</th>
      <th>Recipient</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operations.each do |op| %>
      <tr>
        <td><%= op.kind %></td>
        <td><%= op.amount %></td>
        <td><%= op.date %>
        <td><%= op.recipient %></td>
        <td><%= link_to 'Show', op %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', root_path %>