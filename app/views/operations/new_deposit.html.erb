  <h5 class="card-title text-center">New Deposit</h5>
  <%= form_for(@operation, url: deposit_path, class: "form-signin") do |f|%>
    <%= render 'shared/errors',obj: @operation %>
      <div>
        <%= f.hidden_field :account_id, value: @account.id%>
        <%= f.hidden_field :recipient, value: @account.account_number%>
      </div>
    
      <div class="form-label-group col-md-8">
          <%= f.number_field :amount, autofocus: true, autocomplete: "amount", 
                            class: "form-control", placeholder: "Amount"%><br />
          <%= f.label :amount%>
      </div>

    <div class="actions">
      <%= f.submit "Deposit", class: "btn btn-success btn-lg btn-primary"%>
    </div>
  <% end %>
    <%= link_to "Back",root_path %>
